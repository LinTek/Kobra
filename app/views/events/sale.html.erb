<%= link_to 'Tillbaka', @event %>

<h1>Försäljning för <%= @event %></h1>

<% if @event.electronic_tickets? %>
<p>
  Försäljning med elektroniska biljetter.
</p>
<% else %>
<p>
  Försäljning utan elektroniska biljetter, registrerar endast antal biljetter och visar rabatter.
</p>
<% end %>


<!-- <p>
  Totalt antal sålda biljetter: <span id="tickets_count"><%= @event.tickets.count %></span>
</p> -->

<!-- Sök student -->
<%= form_for(:student, :url => search_event_student_path(@event), :remote => true) do |f| %>
  <%= f.text_field :query %>
  <%= f.submit "Sök efter student", :onclick => "$('spinner').show();"  %>
  <img src="/images/spinner.gif" style="display: none; border:none; margin-bottom: -0.5em;" id="spinner" alt="" />
<% end %>


<div id="results"></div>

<%= form_for(:ticket, :url => search_event_student_path(@event), 
  :remote => true) do |f| %>
  <ul>
  <% @event.ticket_types.each do |ticket_type| %>
    <li>
      <%= check_box :ticket_type, ticket_type.id %>
      <%= label :ticket_type, ticket_type.id, ticket_type %>
    </li>
  <% end %>
  </ul>
  <p><%= f.submit "Spara" %></p>
<% end %>


<% if @event.electronic_tickets? %>

<p>eller knappa in manuellt</p>

<%= render :partial => 'visitors/form' %>

<% end %>

<script type="text/javascript" charset="utf-8">
  $('ticket_submit').hide();
  $('student_query').focus();
</script>

