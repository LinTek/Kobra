<%= form_for(:ticket, :url => sale_event_ticket_path(@event), :remote => true) do |f| %>
  <span id="hidden_field"></span>
  <ul style="">
  <% @event.available_ticket_types.each do |ticket_type| %>
    <li style="font-size:150%; margin-bottom: 0.5em; list-style-type:none;">
      <%= check_box :ticket_type, ticket_type.id %>
      <%= label :ticket_type, ticket_type.id, ticket_type %>
    </li>
  <% end %>
  </ul>
  
  <span id="union_override" style="display:none;">
  <%= check_box :union, :override %>
  <%= label :union, :override, "Tvinga Lintek-medlemskap (ger rabatter)" %>
  </span>
  <p><%= f.submit "Registrera" %></p>
<% end %>
